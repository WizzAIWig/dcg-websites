# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_GTM_ID=

# Feature flags (optional, defaults to brand config)
NEXT_PUBLIC_ENABLE_LIVE_CHAT=false
